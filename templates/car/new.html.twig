{% extends 'base.html.twig' %}

{% block title %}New Car{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Create New Car</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.makeYear) }} {# corrected field name #}
                    {{ form_widget(form.makeYear, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.image) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.transmission) }}
                    {{ form_widget(form.transmission, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="{{ path('app_car_index') }}" class="btn btn-secondary">Back to list</a>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
